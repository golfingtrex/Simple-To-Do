<Window x:Class="Simple_To_Do.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_To_Do" xmlns:views="clr-namespace:Simple_To_Do.Views"
        mc:Ignorable="d"
        Title="Simple To Do" Height="450" Width="800"
        FontSize="16"
        FontFamily="Source Code Pro"
        WindowStartupLocation="CenterScreen">

    <!--Place the entire thing in a grid so we can give it margins.-->
    <Grid
        Margin="20 10"
        MaxWidth="1000">

        <!--The layout of each view in the Main Window.-->
        <StackPanel>
            <views:BannerView Margin="0 10"/>
            <views:TodoEntryView Margin="0 5"/>
            <views:TodoListView Margin="0 5"/>
        </StackPanel>

    </Grid>
</Window>

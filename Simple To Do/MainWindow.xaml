<Window x:Class="Simple_To_Do.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_To_Do" xmlns:views="clr-namespace:Simple_To_Do.Views"
        mc:Ignorable="d"
        Title="Simple To Do" Height="450" Width="800"
        FontSize="16"
        FontFamily="Source Code Pro"
        WindowStartupLocation="CenterScreen">

    <StackPanel Name="mainStackPanel" Margin="10" MinWidth="500">
        <views:BannerView Margin="0 10"/>
        <views:TodoEntryView Margin="0 10"/>
        <views:TodoListView Margin="0 10"/>

        <!--<ListBox Name="TodoList" Style="{StaticResource TodoListBox}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem"/>
            </ListBox.ItemContainerStyle>
        </ListBox>-->

    </StackPanel>
</Window>

<UserControl x:Class="Simple_To_Do.Views.TodoListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Simple_To_Do.Views"
             xmlns:viewmodels="clr-namespace:Simple_To_Do.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:TodoListViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <!--The ListBox for displaying Todo Items according to resource set in Application.Resources.-->
    <ListBox Style="{StaticResource TodoListBox}">
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem"/>
        </ListBox.ItemContainerStyle>

        <!--Doesn't scroll yet. TODO-->
        <ListBoxItem Style="{StaticResource TodoListBoxItem}"/>
    </ListBox>

</UserControl>
